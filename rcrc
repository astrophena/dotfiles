DOTFILES_DIRS="$HOME/s/dotfiles"
EXCLUDES="*.md docs install.sh"
UNDOTTED="bin"

TAGS="base bash curl git htop ssh vim"

if [ -f /google/devshell/bashrc.google ]; then
  TAGS="cloudshell ${TAGS}"
fi

if command -v neofetch >/dev/null 2>&1; then
  TAGS="neofetch ${TAGS}"
fi

if command -v byobu >/dev/null 2>&1; then
  TAGS="byobu ${TAGS}"
fi

if command -v kitty >/dev/null 2>&1; then
  TAGS="kitty ${TAGS}"
fi

if [ "$(uname -o)" = "Android" ]; then
  TAGS="termux ${TAGS}"
fi

if dpkg -l xubuntu-desktop >/dev/null 2>&1; then
  TAGS="xubuntu ${TAGS}"
fi
