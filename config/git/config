[alias]
	code-changes = !git log --format=format: --name-only | egrep -v '^$' | sort | uniq -c | sort -rg | head -10
	pushall      = !git remote | xargs -L1 git push --all
	cc           = !git code-changes
	co           = !git add --all && git commit
	l            = log
	p            = pull
	pa           = !git pushall
	pu           = push
[credential]
	helper = netrc
[commit]
	template = ~/.config/git/message
[core]
	autocrlf = input
[log]
	mailmap = true
[pull]
	rebase = true
[push]
	followTags = true
[user]
	name       = Ilya Mateyko
	email      = astrophena@gmail.com
[init]
	defaultBranch = master
